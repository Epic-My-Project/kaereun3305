<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/goback"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="넷플릭스 회원정보"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="대충 동의 구하는 글"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/netflixid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Netflix ID*"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/netflixpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Netflix Password*"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:orientation="vertical"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/netflixinfo"
        android:gravity="center"
        android:layout_gravity="center"
        android:backgroundTint="#1dde7d"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:text="넷플릭스 회원 정보를 제공합니다."
        android:textColor="@android:color/black"/>
</LinearLayout>